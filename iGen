#!/usr/bin/env python

import sys

from i_gen import run_vc_gen

def usage():
    sys.stderr.write('Usage: iGen filename\n')
    sys.exit(1)

if __name__ == '__main__':
    if len(sys.argv) != 2:
        usage()
    filename = sys.argv[1]
    text = open(filename).read()
    (vcs, output) = run_vc_gen(text)

    for i in xrange(len(vcs)):
        print vcs[i]

    print "\n" + output


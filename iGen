#!/usr/bin/env python

import sys

# Add imp-interpreter and src folder to sys.path
sys.path.append('imp-interpreter')
sys.path.append('src')

from imp_parser import *
from imp_lexer import *

from i_util import *
from wp import *

def usage():
    sys.stderr.write('Usage: iGen filename\n')
    sys.exit(1)

if __name__ == '__main__':
    if len(sys.argv) != 2:
        usage()
    filename = sys.argv[1]
    text = open(filename).read()
    tokens = imp_lex(text)
    parse_result = imp_parse(tokens)
    if not parse_result:
        sys.stderr.write('Parse error!\n')
        sys.exit(1)


    parse_result = parse_result.value
    (pre, commands, pos) = to_triple(parse_result)

    try:
        print wp(commands, pos.condition)
    except Exception as e:
        print e

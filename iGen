#!/usr/bin/env python

import sys

from i_gen import run_vc_gen

def usage():
    sys.stderr.write('Usage: iGen filename\n')
    sys.exit(1)

if __name__ == '__main__':
    if len(sys.argv) != 2:
        usage()
    filename = sys.argv[1]
    text = open(filename).read()
    result = run_vc_gen(text)
    (vcs, sat_or_unsat, unsat_core) = result

    for i in xrange(len(vcs)):
        print vcs[i]

    print "\n" + str(sat_or_unsat)
    print "\n" + str(unsat_core)

